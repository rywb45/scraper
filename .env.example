# SERP API Key (get from https://serpapi.com or https://serper.dev)
SCRAPER_SERP_API_KEY=your_api_key_here
SCRAPER_SERP_API_PROVIDER=serpapi

# Database
SCRAPER_DATABASE_URL=sqlite+aiosqlite:///./data/scraper.db

# Scraping
SCRAPER_DEFAULT_DELAY_MIN=2.0
SCRAPER_DEFAULT_DELAY_MAX=5.0
SCRAPER_MAX_CONCURRENT_REQUESTS=5
SCRAPER_REQUEST_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_RESPECT_ROBOTS_TXT=true

# Email Discovery
SCRAPER_ENABLE_EMAIL_PATTERN_MATCHING=true
SCRAPER_ENABLE_MX_VERIFICATION=true

# App
SCRAPER_DEBUG=false
